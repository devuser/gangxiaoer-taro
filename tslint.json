{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-react"
        ],
    "jsRules": {},
    "rules": {
        "ordered-imports": [
            true,
            {
                "import-sources-order": "any",
                "named-imports-order": "case-insensitive"
            }
        ],
        "object-literal-sort-keys": [
            true,
            "ignore-case",
            "locale-compare",
            "match-declaration-order",
            "shorthand-first"
        ],
        "member-ordering": [
            true,
            {
                "order": [
                    "public-static-field",
                    "public-instance-field",
                    "public-constructor",
                    "private-static-field",
                    "private-instance-field",
                    "private-constructor",
                    "public-instance-method",
                    "protected-instance-method",
                    "private-instance-method"
                ]
            }
        ],
        "no-console": [
            false,
            "log",
            "error"
        ],
        "interface-name": [
            true,
            "always-prefix"
        ]
    },
    "rulesDirectory": [],
    "exclude": [
        "config/**/*.js",
        "node_modules/**/*.ts",
        "coverage/lcov-report/*.js"
    ]
}
